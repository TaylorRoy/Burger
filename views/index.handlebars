<div class="toDevourDiv">

    <h1>Burgers to Devour</h1>

    <ul>
        {{#each burger}}
        {{#unless this.devoured}}
        <li>
            <p>
                {{this.id}}. {{this.burger_name}}

                <button data-planid="{{this.id}}" class="devourBtn">Devour!!!</button>
            </p>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="alreadyDevouredDiv">

    <h1>Devoured Burgers</h1>

    <ul>
        {{#each burger}}
        {{#if this.devoured}}
        <li>
            <p>
                {{this.id}}. {{this.burger_name}}

                <button data-planid="{{this.id}}" class="delete">Delete</button>
            </p>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>



<div class="form-group">
    <label for="ca">Enter a Burger You Want to Devour!:</label>
    <input type="text" id="addBurger" name="name">
</div>


<button class="addBurgerBtn" type="submit">Add Burger</button>

<script>
    $(document).on("click", ".addBurgerBtn", function (event) {
        // Make sure to preventDefault on a submit event.
        alert("clicked");
        event.preventDefault();

        var newBurger = {
            burger_name: $("#addBurger").val().trim(),
            devoured: 0
        };
        console.log("newBurger", newBurger);

        // Send the POST request.
        $.ajax("/api/burger", {
            type: "POST",
            data: newBurger
        }).then(
            function () {
                console.log("created new burger");
                // Reload the page to get the updated list
                location.reload();
            }
        );
    });

    $(document).on("click", ".devourBtn", function (event) {
        alert("hit");

        var id = $(this).data("planid");
        var newDevoured = 1;

        var newDevouredValue = {
            devoured: newDevoured
        };
        console.log("id", id);
        console.log("newDevoured", newDevoured)
        // Send the PUT request.
        $.ajax("/api/burger/" + id, {
            type: "PUT",
            data: newDevouredValue
        }).then(function(results){
            location.reload();
        })
    });

</script>

